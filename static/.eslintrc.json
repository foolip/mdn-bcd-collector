{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 3
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "curly": ["error", "all"],
    "guard-for-in": "off",
    "indent": "off",
    "max-len": "off",
    "no-invalid-this": "off",
    "no-var": "off",
    "prefer-arrow/prefer-arrow-functions": "off",
    "quotes": "off",
    "require-jsdoc": "off",
    "space-before-function-paren": "off"
  },
  "root": true
}
